<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundalluser"
    android:paddingBottom="50dp"
    tools:context="com.example.mohamedramadan.mychat.WelcomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/welcomimage"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/as" />
<LinearLayout
    android:id="@+id/lin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="130dp"
    >
        <ImageView
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:id="@+id/circle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/circle1"
            android:translationX="-1000dp"
            />

        <ImageView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_weight="1"
            android:id="@+id/circle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/circle2"
            android:translationY="-1000dp" />

        <ImageView
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:id="@+id/circle3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/circle3"
            android:translationX="1000dp"
             />

</LinearLayout>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomimage"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="It helps you connect with your loved"
            android:textColor="@color/colortext"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="ones from all around the world"
            android:textColor="@color/colortext"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send1"
            android:layout_alignStart="@id/lin"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:id="@+id/circle1_send1"
            android:alpha="0"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send1"
            android:layout_alignStart="@id/lin"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:id="@+id/circle1_send2"
            android:alpha="0"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send2"
            android:layout_alignEnd="@id/lin"
            android:layout_marginRight="20dp"
            android:layout_marginTop="110dp"
            android:id="@+id/circle3_send1"
            android:alpha="0"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send2"
            android:layout_marginRight="20dp"
            android:layout_alignEnd="@id/lin"
            android:layout_marginTop="80dp"
            android:id="@+id/circle3_send2"
            android:alpha="0"
            />

    </RelativeLayout>
</ScrollView>
