<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundalluser"
    tools:context=".SettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/card_view1"

    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/user_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/imageuser1"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/edit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/editimage"
        android:onClick="editUserImage"
        android:background="@null"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        />
</android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/card_view2"
                >
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                />

            <ImageButton
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editimage"
                android:id="@+id/edite_user_name"
                android:onClick="editUserName"
                android:layout_marginRight="8dp"
                android:background="@null"
                />
            </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view2"
        android:layout_margin="16dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_state"
                android:textSize="18sp"
                android:text=""
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editimage"
                android:id="@+id/edite_user_staute"
                android:onClick="editUserState"
                android:background="@null"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                />
    </android.support.v7.widget.CardView>

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pro_of_image"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:visibility="gone"
    />
    </RelativeLayout>
</ScrollView>