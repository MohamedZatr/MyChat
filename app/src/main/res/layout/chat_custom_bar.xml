<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:layout_toRightOf="@id/chat_image_user"
        android:id="@+id/chat_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diasplay User name"
        android:textColor="#fff" />

    <TextView
        android:layout_toRightOf="@id/chat_image_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last seen"
        android:textColor="#fff"
        android:layout_below="@id/chat_user_name"
        android:id="@+id/chat_last_seen"

        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/imageuser1"
        android:id="@+id/chat_image_user"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="false"
        />
</RelativeLayout>